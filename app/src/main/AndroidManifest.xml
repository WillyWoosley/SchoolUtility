<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gamecodeschool.schoolutility">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/pcs_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".HomeworkActivity"
            android:label="@string/homework"
            android:screenOrientation="portrait" />
        <activity android:name=".NewsActivity"
            android:label="@string/the_roar"
            android:screenOrientation="portrait"/>
        <activity android:name=".EventsActivity"
            android:label="@string/calendar"
            android:screenOrientation="portrait"/>
        <activity android:name=".ContactsActivity"
            android:label="@string/contacts"
            android:screenOrientation="portrait"/>
        <activity android:name=".SettingActivity"
            android:label="Settings"
            android:screenOrientation="portrait"/>
        <activity android:name=".CollectionAnnouncementActivity"></activity>

    </application>

</manifest>