<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:text="Select a class to add the assignment for:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

        <CheckBox
            android:id="@+id/classAssignFirst"
            android:layout_below="@id/textView2"
            android:layout_centerHorizontal="true"
            android:text="first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/classAssignSecond"
            android:text="second"
            android:layout_below="@id/classAssignFirst"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/classAssignThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/classAssignSecond"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="third" />

        <CheckBox
            android:id="@+id/classAssignFourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/classAssignThird"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="fourth" />

        <CheckBox
            android:id="@+id/classAssignFifth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/classAssignFourth"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="fifth" />

        <CheckBox
            android:id="@+id/classAssignSixth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/classAssignFifth"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="sixth" />

    <Button
        android:text="@string/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assignClassOk"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_below="@id/classAssignSixth"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/assignClassCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/classAssignSixth"
        android:text="Cancel"/>

</RelativeLayout>