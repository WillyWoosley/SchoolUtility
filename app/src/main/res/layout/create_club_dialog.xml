<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input your club name and description so that your members can find you:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView"
        android:text="Club Name:"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:id="@+id/createClubName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView2"
        android:layout_marginTop="5dp"
        android:hint="Input Club Name Here"
        android:gravity="center"/>

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input club description"
        android:textColor="@android:color/black"
        android:layout_below="@id/createClubName"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/createClubDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView3"
        android:layout_marginTop="5dp"
        android:hint="Input Club Description Here"
        android:gravity="center"/>

    <Button
        android:id="@+id/createClassCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/createClubDescription"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="OK"/>

    <Button
        android:id="@+id/createClassDismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/createClubDescription"/>

</RelativeLayout>